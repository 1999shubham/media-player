<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="build_plugin" name="LCD Display">

    <target name="clean_plugin">
        <delete dir="${plugin_target_dir}/LCDDisplay"/>
    </target>

    <target name="build_plugin" depends="clean_plugin">

        <jar destfile="${plugin_target_dir}/LCDDisplay/LCDDisplay.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${classes_dir}">
                <include name="**/plugin/lcddisplay/**" />
            </fileset>

            <zipfileset excludes="META-INF/*.SF" src="${lib_dir}/core/pi4j-core-0.0.5.jar"/>
        </jar>

        <copy file="${src_dir}/org/rpi/plugin/lcddisplay/LCD.xml" todir="${plugin_target_dir}/LCDDisplay"/>
    </target>

</project>